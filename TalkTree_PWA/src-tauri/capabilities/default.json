{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DESKTOP/TalkTree/**/*"
        }
      ]
    },
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-desktop-read",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-resource-read-recursive",
    "fs:allow-resource-read",
    "fs:allow-copy-file",
    "fs:allow-exists",
    "dialog:allow-confirm",
    "sql:allow-execute",
    "sql:allow-load",
    "sql:allow-close",
    "sql:allow-select",
    "process:default"
  ]
}